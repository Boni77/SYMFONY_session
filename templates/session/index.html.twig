{% extends 'base.html.twig' %}

{% block title %}Liste des Sessions{% endblock %}

{% block body %}

<h2>Sessions</h2>
<br>
<button type="button" class="btn btn-success"> <i class="fa-solid fa-plus"></i> <a href ="{{ path('add_session') }}">Ajouter une session</a> </button>
<br>
<br>
<table class="tabFormation">
<thead>
<tr>
<th>Date de d√©but</td>
<th>Sessions</td>
<th>Fiche informations</td>
<th>Formation</td>
</tr>
</thead>
<tbody>
{% for session in sessions %}
<tr>
