<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
			<script src="js/script.js" defer></script>

		{% endblock %}

		{% block javascripts %}
			<script src="{{ asset('js/script.css') }}"></script>
			<script src="https://kit.fontawesome.com/81ab4e445e.js" crossorigin="anonymous"></script>
		{% endblock %}
	</head>

	<header class=" bg-dark text-white">
		<nav>
			<a id="link" href="#">
				<span id="burger"></span>
			</a>
      
      <ul class="list">
        <li>
          <a href="{{ path('app_home')}}">ACCUEIL</a>
        </li>
        <li>
          <a href="{{ path('app_formation')}}">FORMATIONS</a>
        </li>
        <li>
          <a href="{{ path('app_session')}}">SESSIONS</a>
        </li>
        <li>
          <a href="{{ path('app_stagiaire')}}">STAGIAIRES</a>
        </li>
        <li>
          <a href="{{ path('app_formateur')}}">FORMATEURS</a>
        </li>
      </ul>
   
			<div class="connexion">
				{% if app.user %}
					<img src="img\namaste.png" width="40px">
					Bienvenue
					{{ app.user.pseudo }}
					<a class="nav-link" href="{{ path('app_logout')}}">
						<div class="rouge">Deconnexion
							<i class="fa-solid fa-arrow-right-from-bracket"></i>
						</div>
					</a>

				{% else %}
					<a href="{{ path('app_login')}}">Connexion |</a>
					<a href="{{ path('app_register')}}">Inscription</a>
				{% endif %}
			</div>
		</nav>
	</header>


	<body>
		<div class="wrapper"> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
